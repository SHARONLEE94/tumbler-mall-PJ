<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tumblermall.board.mapper.boardMapper">

    <resultMap id="postList" type="com.tumblermall.board.dto.responseBoardDto">
<!--        <result property="postId" column="post_id" />-->
        <result property="boardCode" column="board_type_code" />
        <result property="postTitle" column="post_title" />
        <result property="viewCnt" column="view_count" />
        <result property="isPinned" column="is_pinned" />
    </resultMap>
    
    <select id="selectTitle" resultType="String" parameterType="String">
        select post_title
         from modeling.post
        where post_id = 1
    </select>

    <select id="selectRow" parameterType="Integer"  resultMap="postList">
        select board_type_code, post_title, view_count, is_pinned
        from modeling.post
        where post_id = #{row}
    </select>

</mapper>
